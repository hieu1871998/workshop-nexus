{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["db:generate"]
		},
		"build": {
			"outputs": [".next/**", "!.next/cache/**"],
			"dependsOn": ["db:generate", "db:push", "lint:fix", "format"]
		},
		"lint": {
			"cache": false
		},
		"lint:fix": {
			"cache": false
		},
		"format": {
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"db:push": {
			"cache": false
		}
	},
	"globalDotEnv": [".env.development.local"]
}
